{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1><span class="font-semi-bold">Customer Listing</span></h1>
  <p class="lead">Welcome to <span class="font-normal">{{project}}</span>, an&nbsp;application generated&nbsp;by<br/>the <span class="font-normal">Pyramid Web Framework 1.7</span>.</p>
    <form method="POST" action="form">
      <div class="form-group row" id="name-group">
        <label for="inputName" class="col-sm-2 form-control-label">Name</label>
        <div class="col-sm-6">
          <input name="name" type="text" class="form-control" id="inputName" placeholder="Full Name"/>
        </div>
      </div>
      <div class="form-group row" id="email-group">
        <label for="inputEmail" class="col-sm-2 form-control-label">Email</label>
        <div class="col-sm-6">
          <input name="email" type="text" class="form-control" id="inputEmail" placeholder="Email"/>
        </div>
      </div>
      <div class="form-group row">
        <label for="contype" class="col-sm-2">Contract Type</label>
        <div class="col-sm-10"  id="contract_type-group">
             <select id="contype" name="contract_type">
                 {% for contype in const.CONTRACT_TYPE_ENUM %}
                    <option value="{{contype}}">{{contype}}</option>
                 {% endfor %}
             </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="custype" class="col-sm-2">Customer Type</label>
        <div class="col-sm-10" id="customer_type-group">
             <select id="custype" name="customer_type">
                 {% for custype in const.CUSTOMER_TYPE_ENUM %}
                    <option value="{{custype}}">{{custype}}</option>
                 {% endfor %}
             </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-secondary">Submit</button>
        </div>
      </div>
    </form>

</div>
{% endblock content %}
